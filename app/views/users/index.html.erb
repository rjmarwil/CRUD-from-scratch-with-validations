<h1>Users</h1>

<br/>

<%= link_to 'New User', new_user_path, class:'btn btn-info' %>

<br/><br/>

<table border=1>
  <thead>
    <tr>
      <th>User</th>
      <th colspan="3"></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= link_to user.user, user %></td>
        <td><%= link_to 'Edit', edit_user_path(user), class:'btn btn-info' %></td>
        <td><%= link_to 'Delete', user_path(@user), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
